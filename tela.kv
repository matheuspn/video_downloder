<Home>
    orientation:'vertical'

    MDToolbar:
        title: "Vidder"
        right_action_items: [["cog", lambda x: root.options()]]
        md_bg_color: app.theme_cls.primary_dark

    MDBoxLayout:
        size_hint: 1, 0.8 
        ScrollView:
            MDBoxLayout:
                id:box
                padding: "10dp", "10dp"
                orientation:'vertical'
                size_hint_y:None

    MDLabel:
        size_hint: 1, 0.1
        id: status
        halign: "center"
        valign: "center"
        text: ""

    MDBoxLayout:  
        size_hint: 0.9, 0.1
        pading: "50dp"
        spacing: "30dp"
        pos_hint: {"center_x": 0.5}
        MDTextField:
            hint_text: "URL"
            id: url_text
            spacing: "10dp"
            multiline: False
            size_hint: 0.6, None
            height: "30dp"
            pos_hint: {"center_y": 0.5}
        MDRaisedButton:
            spacing: "10dp"
            text: "Baixar"
            size_hint: 0.2, None
            height: "30dp"
            pos_hint: {"center_y": 0.5}
            on_press: root.download()
            md_bg_color: app.theme_cls.primary_dark
    

<Video>
    MDBoxLayout:
        spacing: "10dp", "10dp"
        size_hint_y:None
        height: "60dp"
        canvas.before:
            Line:
                rectangle: self.pos[0], self.pos[1], self.size[0], self.size[1]
        AsyncImage:
            id: video_image
            size_hint: 1,1
            source: " "
        MDLabel:
            id: video_text
            font_size: "18sp"