<Home>
    orientation:'vertical'

    MDBottomNavigation:

        MDBottomNavigationItem:
            name: "Home"
            text: "Home"

            MDBoxLayout:
                orientation: "vertical"

                MDBoxLayout:  
                    size_hint: 1, 0.1
                    pading: 10
                    spacing: 10
                    MDLabel:
                        text: "Vidder"
                        size_hint: 0.25, None
                        halign: "center"
                        pos_hint: {"center_y": 0.1}
                        height: 30
                    MDTextField:
                        hint_text: "URL"
                        id: url_text
                        spacing: 10
                        multiline: False
                        size_hint: 0.5, None
                        height: 30
                        pos_hint: {"center_y": 0.1}
                    MDRaisedButton:
                        spacing: 10
                        text: "Baixar"
                        size_hint: 0.25, None
                        height: 30
                        pos_hint: {"center_y": 0.1}
                        on_press: root.download()

                MDBoxLayout:
                    size_hint: 1, 0.8 
                    ScrollView:
                        MDBoxLayout:
                            id:box
                            padding: 10, 10
                            orientation:'vertical'
                            size_hint_y:None

                MDLabel:
                    size_hint: 1, 0.1
                    id: status
                    halign: "center"
                    valign: "center"
                    text: ""

        MDBottomNavigationItem:
            name: "opt"
            text: "Options"
            MDLabel:
                text: "Screen 2"
                halign: "center"
    

<Video>
    MDBoxLayout:
        spacing: 10, 10
        size_hint_y:None
        height: 60
        canvas.before:
            Line:
                rectangle: self.pos[0], self.pos[1], self.size[0], self.size[1]
        AsyncImage:
            id: video_image
            size_hint: 1,1
            source: " "
        MDLabel:
            id: video_text
            font_size: 18